<div class="container mt-2">
  <h1>My tasks</h1>
  <% @tasks.each do |task| %>
    <div class="form-check">
      <input class="form-check-input" type="checkbox" value="" <%= task.checked %>>
      <%= link_to task.title, task_path(task), class: "text-decoration-none text-reset" %>
      <%= link_to "", task_path(task), class: "fa-solid fa-trash-can", data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
    </div>
  <% end %>
  <%= link_to "New task", new_task_path, class: "btn btn-primary mt-3" %>
</div>
